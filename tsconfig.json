{
  "include": ["src"],
  "exclude": ["src/**/*.test.ts", "src/setupTests.ts"],
  "compilerOptions": {
    "types": ["jest"],
    "module": "CommonJS",
    "target": "ES2019",
    "outDir": "dist",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "declaration": false
  }
}
